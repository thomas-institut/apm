{% extends "base.twig" %}

{% block title %}CT Error{% endblock %}

{% block extraJS %}
     <!-- {{ errorSignature }} -->
    <script>
        let signature = '{{errorSignature}}'
        if (signature !== '') {
            console.error('Collation Table Error: ' + signature.split('_')[2])
        } else {
            console.error('Unknown Error')
        }
    </script>   
{% endblock %}

{% block content %}
    
    
    <ol class="breadcrumb">
         <li><a href="{{path_for('chunks')}}">Chunks</a></li>
         <li><a href="{{path_for('chunk', {'work' : work, 'chunk': chunk})}}">{{work}}-{{chunk}}</a></li>
         <li>Collation Table</li>
         <li class="active">{{langName}}</li>
    </ol>
    <div class="alert alert-danger" role="alert">
        <h1><i class="fas fa-exclamation-triangle" aria-hidden="true"></i> Error</h1>
        <p class="lead">{{message|raw}}</p>
    </div>
{% endblock %}