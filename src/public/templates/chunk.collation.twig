{% extends "base.twig" %}
{% import 'macros.twig' as macros %}

{% block title %}CT {{work}}-{{chunk}}-{{lang}}{% endblock %}

{% block extraJS %}
    <script type="application/javascript" src="{{baseurl}}/js/Item.js"></script>
    <script type="application/javascript" src="{{baseurl}}/js/CollationTableFormatter.js"></script>
    <script type="application/javascript" src="{{baseurl}}/js/CollationTable.js"></script>
    <style>
    table.collationtable {
        margin-bottom: 20px;
    }
    
    .ltrtext {
        direction: ltr;
    }
    
    .rtltext {
        direction: rtl;
    }
</style>
<script>
$(document).ready(function() 
{ 
    let collatexOutput = JSON.parse("{{collatexOutput|json_encode|e('js')}}")
    let ctObject = new CollationTablePage(collatexOutput, {{rtl}})
} 
);
</script>
{% endblock %}
{% block content %}
     <ol class="breadcrumb">
         <li><a href="{{path_for('chunks')}}">Chunks</a></li>
         <li><a href="{{path_for('chunk', {'work' : work, 'chunk': chunk})}}">{{work}}-{{chunk}}</a></li>
         <li>Collation Table</li>
         <li class="active">{{langName}}</li>
    </ol>
<h1>Collation Table: {{work}}-{{chunk}} : {{langName}}</h1>
<p>{{work_info.author_name}}, <em>{{work_info.title}}</em>, chunk {{chunk}}</p>
<p>{{num_docs}} witness{%if num_docs!=1 %}es{%endif%}</p>
<div class="chunktexts">
{% for doc in docs %}
    {% if doc.plain_text %}
    <div class="collapse in" id="plaintext-{{doc.id}}-{{work}}-{{chunk}}">
        <div class="panel panel-default">
            <div class="panel-heading">
            <h3 class="panel-title">{{doc.title}}</h3>
            </div>
             <div class="panel-body">
                     <p class="chunktext chunktext-{{doc.lang}}">{{doc.plain_text}}</p>
            </div>
        </div>
    </div>
    {% endif %}
{% endfor %}
</div>


<h2>Collation Table</h2>
<button type="button" class="btn" id="changeTableViewButton">Collapse / Expand Segments</button>
<div class="row">
<div id="collationtablediv" class="ltrtext" style="overflow-x: auto; margin-top: 20px;">
</div>
</div>
{% endblock %}
