{% extends "base.twig" %}
{% import 'macros.twig' as macros %}

{% block title %}Quick Collation{% endblock %}

{% block extraJS %}
<script type="application/javascript" src="{{baseurl}}/js/ApmUrlGenerator.js"></script>
<script type="application/javascript" src="{{baseurl}}/js/Item.js"></script>
<script type="application/javascript" src="{{baseurl}}/js/CollationTableFormatter.js"></script>
<script type="application/javascript" src="{{baseurl}}/js/QuickCollation.js"></script>
<style>
    textarea {
        width: 100%;
        height: 5em;
    }
    
    div.texttitle {
        font-weight: bold;
        text-align: center;
        height: 5em;
        padding-top: 1.5em;
        padding-bottom: 1.5em;
    }
    
    .cancelindent {
        margin-left: 0;
    }
    table.collationtable {
        margin-bottom: 20px;
    }
    
    .ltrtext {
        direction: ltr;
    }
    
    .rtltext {
        direction: rtl;
    }
</style>

<script>
    $(document).ready(function () {
        let ug = new ApmUrlGenerator('{{baseurl}}')
        let qcObject = new QuickCollation(ug)
    })
</script>
{% endblock %}

{% block content %}

<h1>Quick Collation</h1>

<p>Enter at least two texts to collate in the fields below: </p>


<div class="row cancelindent">
    <div class="col-md-1 texttitle">
        Text A
    </div>
    <div class="col-md-11">
        <textarea  id="textA">Gallia est omnis divisa in partes tres, quarum unam incolunt Belgae, aliam Aquitani, tertiam qui ipsorum lingua Celtae, nostra Galli appellantur. </textarea>
    </div>
</div>
<div class="row cancelindent">
    <div class="col-md-1 texttitle">
        Text B
    </div>
    <div class="col-md-11">
        <textarea  id="textB">Gallia omnis divisa est in partes tres, quarum unum incolunt Belgae, aliam Aquitani, tertiam qui ipsorum lingua Celtae, nostrae Galli appellantur. </textarea>
    </div>
</div>

<div class="row cancelindent">
    <div class="col-md-1 texttitle">
        Text C
    </div>
    <div class="col-md-11">
        <textarea id="textC">Gallia est omnis divisa in partes tres, qvarum vnam incolunt Belgae, aliam Aquitani, tertiam qui ipsorum lingua Celtae, nostra Galli appellantur. </textarea>
    </div>
</div>

<div class="row cancelindent">
    <div class="col-md-1 texttitle">
        Text D
    </div>
    <div class="col-md-11">
        <textarea id="textD">Gallia est omnis divisa in partes 3, quarum unam incolunt Belge, aliam Aquitani, tertam qui ipsorum lingua Celte, nostra Galli appellantur. </textarea>
    </div>
</div>


<div class="row cancelindent">
    <div class="col-md-1"></div>
    <div class="col-md-11">
    <button type="button" class="btn btn-primary" id="collateButton">Collate</button>
    </div>
</div>
<div class="row cancelindent">
    <p class="text-danger" id="status"></p>
</div>


<h2>Collation Table</h2>
<button type="button" class="btn" id="changeTableViewButton">Collapse / Expand Segments</button>
<button type="button" class="btn" id="changeTextDirectionButton">LTR / RTL </button>
<div class="row">
<div id="collationtablediv" class="ltrtext" style="overflow-x: auto; margin-top: 20px;">
</div>
</div>
    
{% endblock %}

