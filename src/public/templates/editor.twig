<div class="transcription-editor">
    <div class="toolbar">
        <button id="clear-button-{{id}}" class="selFmtBtn" title="Clear formatting" disabled><i class="fa fa-eraser"></i></button>
        <button id="ar-button-{{id}}" class="langButton" title="Arabic" disabled>ar</button>
        <button id="he-button-{{id}}" class="langButton" title="Hebrew" disabled>he</button>
        <button id="la-button-{{id}}" class="langButton" title="Latin" disabled>la</button>

        <button id="rubric-button-{{id}}" class="selFmtBtn" title="Rubric" disabled>R</button>
        <button id="gliph-button-{{id}}" class="selFmtBtn" title="Gliph" disabled>G</button>
        <button id="initial-button-{{id}}" class="selFmtBtn" title="Initial" disabled>I</button>

        <button id="note-button-{{id}}" title="Editorial Note"><i class="fa fa-comment-o"></i></button>

        <button id="sic-button-{{id}}" class="selFmtBtn" title="Sic" disabled><i class="fa fa-frown-o"></i></button>
        <button id="abbr-button-{{id}}" class="selFmtBtn" title="Abbreviation" disabled><i class="fa fa-hand-spock-o"></i></button>
        <button id="add-button-{{id}}" class="selFmtBtn" title="Addition" disabled><i class="fa fa-plus-square"></i></button>
        <button id="del-button-{{id}}" class="selFmtBtn" title="Deletion" disabled><i class="fa fa-minus-square"></i></button>
        <button id="unclear-button-{{id}}" class="selFmtBtn" title="Unclear" disabled><i class="fa fa-low-vision"></i></button>
        <button id="illegible-button-{{id}}" title="Illegible"><i class="fa fa-eye-slash"></i></button>
        <button id="dash-button-{{id}}" title="Dash" disabled><i class="fa fa-minus"></i></button>
        <button class="title-button" disabled>&nbsp;&nbsp;</button>
        <button id="blockquote-button-{{id}}" title="Marginal Note"><i class="fa fa-quote-right"></i></button>
        <button id="header-button-{{id}}" title="Header"><i class="fa fa-header"></i></button>
        <button class="title-button" disabled>Default:</button>
        <span class="dropdown">
            <button class="dropdown-toggle" type="button" id="lang-button-{{id}}" title="Latin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                la
           </button>
            <ul class="dropdown-menu" aria-labelledby="lang-button-{{id}}">
                <li><a id="set-arabic-{{id}}">Arabic</a></li>
                <li><a id="set-latin-{{id}}">Latin</a></li>
                <li><a id="set-hebrew-{{id}}">Hebrew</a></li>
           </ul>
        </span>
    </div>
    <div id="editor-container-{{id}}" class="editor-container"></div>
</div>
    <div id="sic-modal-{{id}}" class="modal" role="dialog">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 id="sic-modal-title-{{id}}" class="modal-title">Sic</h4>
                </div>
                <div class="modal-body" id="sic-modal-body-{{id}}">
                    <form>
                        <div class="form-group">
                            <label for="sic-modal-text-{{id}}" class="control-label">Text:</label>
                            <span id="sic-modal-text-{{id}}"></span>
                        </div>
                        <div class="form-group">
                            <label for="sic-modal-correction-{{id}}" class="control-label">Correction:</label>
                            <input type="text" class="form-control" id="sic-modal-correction-{{id}}">
                        </div>
                        <input id="sic-note-id-{{id}}" type="hidden" name="note-id" value=""/>
                        <div class="form-group">
                            <label for="sic-note-{{id}}" class="control-label">Note:</label>
                            <input type="text" class="form-control" id="sic-note-{{id}}">
                            <p class="sic-note-edit-time" id="sic-note-time-{{id}}"></p>
                        </div>
                        <div class="modal-ednotes" id="sic-modal-ednotes-{{id}}">
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="sic-modal-submit-button-{{id}}">Submit</button>
                </div>
            </div>
        </div>
    </div>