{% extends "base.twig" %}

{% block title %}Scratch{% endblock %}

{% block finalBodyJS %}
    <script>
      $(function() {

        // function to display text in html-paragraph
        function displayText (paragraph, text) {
          return $(paragraph).text(text)
        }

        // keyup event calls displayText function
        $("#searchField").on("keyup",function(){
          displayText("#searchOutput", "Search Results");
        });
      })
    </script>
{%  endblock %}

{% block content %}
    <h1> Search </h1>
<form>
    <label for="searchField">Enter text:</label><br>
    <input type="text" id="searchField" name="searchField">
</form>
    <br><br>
    <p id="searchOutput">Search results will appear here....</p>
    <br><br>
{% endblock %}



