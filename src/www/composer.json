{
    
    "name": "thomas-institut/apm",
    "description": "Averroes Project Manager",
    "type": "application",
    "keywords": ["mss"],
    "homepage": "https://averroes.uni-koeln.de",
    "license": "GPL-3.0-or-later",
    
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-zlib": "*",
        "ext-posix": "*",
        "psr/log": "^3.0",
        "slim/slim": "^4.3",
        "slim/psr7": "1.6.1",
        "slim/twig-view": "3.3.0",
        "php-di/slim-bridge" : "3.2.0",
        "dflydev/fig-cookies": "^v3.0.0",
        "rafaelnajera/xmlmatcher": "^0.4",
        "thomas-institut/datatable" : "^0.9",
        "thomas-institut/timestring" : "^1.2",
        "monolog/monolog": "^3.0",
        "swaggest/json-schema": "^0.12.29",
        "opensearch-project/opensearch-php": "^2.0"
    },
    
    "require-dev": {
        "guzzlehttp/guzzle": "^7.5",
        "phpunit/phpunit": "^10.0"
    },
    
    "autoload": {
        "psr-4": {
            "AverroesProject\\": "classes\\averroesproject",
            "APM\\": "classes\\apm",
            "AverroesProjectToApm\\" : "classes\\ap2apm",
            "TestHelpers\\" : "test\\helperclasses",
            "ThomasInstitut\\" : "classes\\thomasinstitut"
        }
    }
}
