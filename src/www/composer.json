{

    "name": "thomas-institut/apm",
    "description": "Averroes Project Manager",
    "type": "application",
    "keywords": ["mss"],
    "homepage": "https://averroes.uni-koeln.de",
    "license": "GPL-3.0-or-later",

    "require": {
        "php": ">=8.3",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-zlib": "*",
        "ext-memcached": "*",
        "ext-pcntl": "*",
        "ext-posix": "*",
        "ext-sockets": "*",
        "ext-yaml": "*",
        "ext-gd": "*",
        "psr/log": "^3.0",
        "slim/slim": "^4.3",
        "slim/psr7": "^1.6",
        "slim/twig-view": "^3.3.0",
        "dflydev/fig-cookies": "^v3.0.0",
        "rafaelnajera/xmlmatcher": "^0.4",
        "thomas-institut/datatable" : "^2.0.2",
        "thomas-institut/timestring" : "^v1.3",
        "monolog/monolog": "^3.0",
        "swaggest/json-schema": "^v0.12.43",
        "opensearch-project/opensearch-php": "^2.0",
        "php-http/curl-client": "^2.3",
        "typesense/typesense-php": "^4.9"
    },

    "require-dev": {
        "guzzlehttp/guzzle": "^7.5",
        "phpunit/phpunit": "^12.0"
    },

    "config": {
        "optimize-autoloader": true,
        "prepend-autoloader": false,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },

    "autoload": {
        "psr-4": {
            "" : "classes/",
            "APM\\Test\\": "test/php/APM",
            "ThomasInstitut\\Test\\": "test/php/ThomasInstitut"
        }
    }
}
