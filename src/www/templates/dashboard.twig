{% extends "base.twig" %}

{% block title %}Dashboard{% endblock %}

{% block extraCSS %}
    <link rel="stylesheet" type="text/css" href="{{baseurl}}/css/dashboard.css"/>
{% endblock %}

{% block extraJS %}
  <script type="application/javascript" src="{{baseurl}}/js/dist/DashboardPage.bundle.js"></script>
{% endblock %}


{% block finalBodyJS %}
<script>

  $(() => {
    new DashboardPage(( {
      baseUrl: '{{ baseurl }}',
      userId: parseInt('{{ userId }}'),
      userInfo: JSON.parse("{{userInfo|json_encode|e('js')}}"),
      showLanguageSelector: parseInt('{{ showLanguageSelector }}') === 1
    }))
  })
</script>
{%  endblock %}
