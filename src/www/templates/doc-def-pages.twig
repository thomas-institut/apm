{% extends "base.twig" %}

{% block extraCSS %}
    <link rel="stylesheet" type="text/css" href="{{baseurl}}/css/doc_page.css"/>
{% endblock %}

{% block extraJS %}
<script type="application/javascript" src="{{baseurl}}/js/dist/DocDefPages.bundle.js"></script>
<script>
    $( () => {
        new DocDefPages( {
          baseUrl: '{{ baseurl }}',
          userId: parseInt('{{ userId }}'),
          userInfo: JSON.parse("{{userInfo|json_encode|e('js')}}"),
          showLanguageSelector: parseInt('{{ showLanguageSelector }}') === 1,
          doc: JSON.parse("{{doc|json_encode|e('js')}}"),
          numPages: {{doc.numPages}}
        });
    })
</script>
{% endblock %}

