{% extends "normal-page.twig" %}


{% block title %}Doc: {{doc.docInfo.title}}{% endblock %}

{% block extraCSS %}
    <link rel="stylesheet" type="text/css" href="{{baseUrl}}/css/doc_page.css"/>
{% endblock %}

{% block extraJS %}
    <script type="application/javascript" src="{{baseUrl}}/node_modules/openseadragon/build/openseadragon/openseadragon.js"></script>
    <script type="application/javascript" src="{{baseUrl}}/js/dist/DocPage.bundle.js"></script>
    <script>
      $( () => {
        new DocPage({
          commonData:  JSON.parse("{{commonData|json_encode|e('js')}}"),
          doc: JSON.parse('{{doc|json_encode|e('js')}}'),
          chunkInfo: JSON.parse('{{chunkInfo|json_encode|e('js')}}'),
          versionInfo: JSON.parse('{{lastVersions|json_encode|e('js')}}'),
          lastSaves: JSON.parse('{{lastSaves|json_encode|e('js')}}'),
          canDefinePages: JSON.parse('{{canDefinePages|json_encode|e('js')}}'),
          canEditDocuments: JSON.parse('{{canEditDocuments|json_encode|e('js')}}'),
          metadata: JSON.parse('{{metaData|json_encode|e('js')}}'),
          params: JSON.parse('{{ params|json_encode|e('js')}}'),
          selectedPage: JSON.parse('{{ selectedPage|json_encode|e('js')}}'),
        })
      });
    </script>
{% endblock %}



