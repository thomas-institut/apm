{% extends "normal-page.twig" %}

{% block title %}Error{% endblock %}

{% block extraCSS %}
    <link rel="stylesheet" type="text/css" href="{{baseurl}}/css/error_page.css"/>
{% endblock %}

{% block extraJS %}
    <script type="application/javascript" src="{{baseurl}}/js/dist/ErrorPage.bundle.js"></script>
{% endblock %}


{% block finalBodyJS %}
    <script>

      $(() => {
        new ErrorPage(( {
          commonData:  JSON.parse("{{commonData|json_encode|e('js')}}"),
          title: '{{ title }}',
          errorMessage: '{{ errorMessage }}'
        }))
      })
    </script>
{%  endblock %}
