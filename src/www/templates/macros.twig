    {% set pagesPerRow = 25 %}
    {% set n=0 %}
<table class="pagetable">
    <tr>
    {% for page in pages %}
        {% if n==pagesPerRow %}
    </tr>
    <tr>
            {% set n = 0 %}    
        {% endif%}
