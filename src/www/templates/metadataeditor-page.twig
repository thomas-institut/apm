{% block title %}Metadata Editor{% endblock %}

{% block extraCSS %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{baseUrl}}/css/metadata-editor.css" />
{% endblock %}

{% block extraJS %}
    <script type="application/javascript" src="{{baseurl}}/js/dist/DevelopmentEntityDataEditor.bundle.js"></script>
{% endblock %}


{% block finalBodyJS %}
